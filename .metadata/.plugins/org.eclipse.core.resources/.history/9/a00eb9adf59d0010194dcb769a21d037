package com.jdojo.intro;

import java.util.Random;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.Background;
import javafx.scene.layout.BackgroundFill;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.stage.Stage;

public class AdivinaoNumero extends Application {

	private int aleatorio = new Random().nextInt(100 - 0 + 1) + 0;

	public static void main(String[] args) {
		Application.launch(args);
	}

	@Override
	public void start(Stage stage) throws Exception {

		VBox root = new VBox();
		
		 int intentos = 0;

		// Creamos los textos
		Label label = new Label("Adiviña o número comprendido entre 0 e 100");
		Label label2 = new Label("O número é máis alto.");
		Label label3 = new Label("Intentos. " + intentos);

		// Creamos los botones
		Button btn = new Button("Probar");

		TextField nameFld = new TextField();

		btn.setOnAction(e -> {
			int numero = Integer.parseInt(nameFld.getText());
			if (numero > 100) {
				label2.setText("Error");
				label3.setText("Intentos: " + intentos);
			} else if (numero > aleatorio) {
				label2.setText("O número é máis baixo");
			} else if (numero < aleatorio) {
				label2.setText("O número é máis alto");
			} else if (numero == aleatorio) {
				label2.setText("Correcto o número é: " + aleatorio);
				root.setBackground(new Background(new BackgroundFill(Color.GREEN, null, null)));			
			}
		});

		Button btn2 = new Button("Reiniciar Xogo");
		
		btn2.setOnAction(e -> {
			
		}
		
		Button btn3 = new Button("Rendirse");
		
		btn3.setOnAction(e -> {
			
			
		}

		// Indica el orden
		root.getChildren().addAll(label, nameFld, btn, btn2, btn3, label2, label3);

		Scene scene = new Scene(root, 300, 200);

		stage.setTitle("Adiviña o número");
		stage.setScene(scene);
		stage.show();
	}

}