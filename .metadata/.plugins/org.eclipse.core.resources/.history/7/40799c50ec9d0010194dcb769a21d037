package com.jdojo.intro;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class MinaPrimeiraXanela extends Application {
	
		public static void main(String[] args) {
			Application.launch(args);
		}

		@Override
		public void start(Stage stage) throws Exception {
			VBox group = new VBox();
			
			Button btn = new Button ("Cambiar titulo");

			//Creamos bot칩n que al presionar cambie el titulo
			btn.setOnAction(e -> {
	            if (stage.getTitle().equals("Mi침a primeira xanela")) {
	            	stage.setTitle("Titulo cambiado");
	            } else {
	            	stage.setTitle("Mi침a primeira xanela");
	            }
	        });
			
			
			group.getChildren().add(btn);

			//Configuramos stage
			Scene scene = new Scene(group, 400, 300);
			stage.setScene(scene);
			stage.setTitle("Mi침a primeira xanela");
			stage.show();
		}

	}
